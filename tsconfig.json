{
    "compilerOptions": {
        "suppressImplicitAnyIndexErrors": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": [
            "es2017",
            "es2016",
            "es2015",
            "dom"
        ]
    },
    "exclude": [
        "coverage",
        "node_modules",
        "!node_modules/@types",
        "./src/tests/*.ts"
    ]
}